<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_bars">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/atv_header_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_header_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_arrow_left"
            android:backgroundTint="#00000000"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left"
            app:tint="@color/atv_header_foreground" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Edit Expense Entry"
            android:textColor="@color/atv_header_foreground"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_header_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_subheader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/atv_background"
        app:layout_constraintBottom_toTopOf="@+id/sv_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cl_header"
        app:layout_constraintTop_toBottomOf="@+id/cl_header">

        <TextView
            android:id="@+id/tv_subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Expense Details"
            android:textColor="@color/tv_label0"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_header" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/sv_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:background="@color/atv_background"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toTopOf="@+id/ll_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/atv_background"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            tools:layout_editor_absoluteY="467dp">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Category"
                android:textColor="@color/tv_label1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/dm_sans"
                android:text="Category Prompt"
                android:textColor="@color/pro_text"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_header"
                app:layout_constraintStart_toEndOf="@+id/tv_header"
                app:layout_constraintTop_toTopOf="@+id/tv_header" />

            <EditText
                android:id="@+id/tf_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tf"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans"
                android:hint="Enter Category"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/tf_text"
                android:textColorHint="@color/tf_hint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_header" />

            <TextView
                android:id="@+id/tv_amount_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Amount"
                android:textColor="@color/tv_label1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_category" />

            <TextView
                android:id="@+id/tv_amount_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/dm_sans"
                android:text="Amount Prompt"
                android:textColor="@color/pro_text"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_amount_current"
                app:layout_constraintStart_toEndOf="@+id/tv_amount_current"
                app:layout_constraintTop_toTopOf="@+id/tv_amount_current" />

            <EditText
                android:id="@+id/tf_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tf"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans"
                android:hint="Enter Amount"
                android:inputType="number|numberDecimal"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/tf_text"
                android:textColorHint="@color/tf_hint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_amount_current" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Date"
                android:textColor="@color/tv_label1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_amount" />

            <TextView
                android:id="@+id/tv_date_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/dm_sans"
                android:text="Date Prompt"
                android:textColor="@color/pro_text"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_date"
                app:layout_constraintStart_toEndOf="@+id/tv_date"
                app:layout_constraintTop_toTopOf="@+id/tv_date" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date">

                <EditText
                    android:id="@+id/tf_date_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tf"
                    android:ellipsize="end"
                    android:fontFamily="@font/dm_sans"
                    android:hint="Month"
                    android:inputType="number"
                    android:padding="12dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/tf_text"
                    android:textColorHint="@color/tf_hint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tf_date_day"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/tf_date_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tf"
                    android:ellipsize="end"
                    android:fontFamily="@font/dm_sans"
                    android:hint="Day"
                    android:inputType="number"
                    android:padding="12dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/tf_text"
                    android:textColorHint="@color/tf_hint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tf_date_year"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/tf_date_month"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/tf_date_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tf"
                    android:ellipsize="end"
                    android:fontFamily="@font/dm_sans"
                    android:hint="Year"
                    android:inputType="number"
                    android:padding="12dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/tf_text"
                    android:textColorHint="@color/tf_hint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_date_calendar"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/tf_date_day"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btn_date_calendar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_tf"
                    android:padding="4dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tf_date_year"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/tf_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Notes"
                android:textColor="@color/tv_label1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_date" />

            <TextView
                android:id="@+id/tv_notes_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/dm_sans"
                android:text="Notes Prompt"
                android:textColor="@color/pro_text"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_notes"
                app:layout_constraintStart_toEndOf="@+id/tv_notes"
                app:layout_constraintTop_toTopOf="@+id/tv_notes" />

            <EditText
                android:id="@+id/tf_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tf"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans"
                android:hint="Enter Notes (Optional)"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/tf_text"
                android:textColorHint="@color/tf_hint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_notes" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Location"
                android:textColor="@color/tv_label1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tf_notes" />

            <TextView
                android:id="@+id/tv_location_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/dm_sans"
                android:text="Location Prompt"
                android:textColor="@color/pro_text"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_location"
                app:layout_constraintStart_toEndOf="@+id/tv_location"
                app:layout_constraintTop_toTopOf="@+id/tv_location" />

            <EditText
                android:id="@+id/tf_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tf"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans"
                android:hint="Enter Location (Optional)"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/tf_text"
                android:textColorHint="@color/tf_hint"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tf_location"
                tools:layout_editor_absoluteX="40dp">

                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Image"
                    android:textColor="@color/tv_label1"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:tint="@color/ico_grayed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image"
                    app:srcCompat="@drawable/ic_image_missing" />

                <LinearLayout
                    android:id="@+id/ll_image_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/img_thumbnail"
                    app:layout_constraintStart_toEndOf="@+id/img_thumbnail"
                    app:layout_constraintTop_toTopOf="@+id/img_thumbnail">

                    <LinearLayout
                        android:id="@+id/ll_image_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="162dp"
                        tools:layout_editor_absoluteY="29dp">

                        <ImageView
                            android:id="@+id/img_image_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:tint="@color/btn_background_neutral"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_image"
                            app:srcCompat="@drawable/ic_camera" />

                        <TextView
                            android:id="@+id/tv_image_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/dm_sans_bold"
                            android:text="Add"
                            android:textColor="@color/btn_background_neutral"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_image_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        tools:layout_editor_absoluteX="162dp"
                        tools:layout_editor_absoluteY="104dp">

                        <ImageView
                            android:id="@+id/img_image_delete"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:tint="@color/btn_background_neutral"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_image"
                            app:srcCompat="@drawable/ic_delete" />

                        <TextView
                            android:id="@+id/tv_image_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/dm_sans_bold"
                            android:text="Delete"
                            android:textColor="@color/btn_background_neutral"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/btn_background"
                android:fontFamily="@font/dm_sans_bold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Save Changes"
                android:textColor="@color/btn_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_image" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans"
                android:text="Delete"
                android:textColor="@color/tv_danger"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_save" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/atv_navigation_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_navigation_expenses"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_foreground"
            app:srcCompat="@drawable/ic_navigationbar_moneybag" />

        <ImageButton
            android:id="@+id/btn_navigation_budgets"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_foreground"
            app:srcCompat="@drawable/ic_navigationbar_meter" />

        <ImageButton
            android:id="@+id/btn_navigation_gallery"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_navigationbar_gallery"
            app:tint="@color/atv_navigation_foreground" />

        <ImageButton
            android:id="@+id/btn_navigation_analytics"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_foreground"
            app:srcCompat="@drawable/ic_navigationbar_barchart" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>