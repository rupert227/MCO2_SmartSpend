<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:elevation="12dp"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rv"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Date"
            android:textColor="@color/tv_label0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_date_clear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_background"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date"
            app:srcCompat="@drawable/ic_rewind" />

        <CheckBox
            android:id="@+id/ch_oldest"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dm_sans"
            android:text="Oldest First"
            android:textColor="@color/btn_background"
            app:buttonIconTint="@color/btn_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:useMaterialThemeColors="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_rv"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Amount"
            android:textColor="@color/tv_label0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_amount_clear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_background"
            app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_amount"
            app:srcCompat="@drawable/ic_rewind" />

        <CheckBox
            android:id="@+id/ch_low"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dm_sans"
            android:text="Lowest to Highest"
            android:textColor="@color/btn_background"
            app:buttonIconTint="@color/btn_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount"
            app:useMaterialThemeColors="false" />

        <CheckBox
            android:id="@+id/ch_high"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:fontFamily="@font/dm_sans"
            android:text="Highest to Lowest"
            android:textColor="@color/btn_background"
            app:buttonIconTint="@color/btn_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ch_low"
            app:useMaterialThemeColors="false" />

        <TextView
            android:id="@+id/tv_lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dm_sans"
            android:text="Lowest "
            android:textColor="@color/tv_label1"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ch_high" />

        <EditText
            android:id="@+id/tf_lowest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_tf2"
            android:ellipsize="end"
            android:fontFamily="@font/dm_sans"
            android:hint="Enter Lowest"
            android:inputType="number|numberDecimal"
            android:padding="4dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/tf_text"
            android:textColorHint="@color/tf_hint"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_lowest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_lowest"
            app:layout_constraintTop_toTopOf="@+id/tv_lowest" />

        <TextView
            android:id="@+id/tv_highest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="Highest"
            android:textColor="@color/tv_label1"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lowest" />

        <EditText
            android:id="@+id/tf_highest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_tf2"
            android:ellipsize="end"
            android:fontFamily="@font/dm_sans"
            android:hint="Enter Highest"
            android:inputType="number|numberDecimal"
            android:padding="4dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/tf_text"
            android:textColorHint="@color/tf_hint"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_highest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_highest"
            app:layout_constraintTop_toTopOf="@+id/tv_highest" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_rv"
        android:orientation="vertical"
        android:padding="8dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Category"
            android:textColor="@color/tv_label0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_category_clear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:tint="@color/atv_navigation_background"
            app:layout_constraintBottom_toBottomOf="@+id/tv_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_header"
            app:srcCompat="@drawable/ic_rewind" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fadeScrollbars="false"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_option0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/btn_background"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Apply"
        android:textColor="@color/btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header" />

</LinearLayout>